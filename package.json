{
  "name": "storefront-surgeon",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "prisma:generate": "prisma generate",
    "db:migrate": "for migration in prisma/migrations/*/migration.sql; do sqlite3 prisma/dev.db < \"$migration\"; done",
    "db:seed": "tsx prisma/seed.ts",
    "db:setup": "npm run prisma:generate && npm run db:migrate && npm run db:seed",
    "demo:reset": "npm run db:seed"
  },
  "dependencies": {
    "@openai/codex": "^0.106.0",
    "@openai/codex-sdk": "^0.106.0",
    "@prisma/client": "^6.19.2",
    "bcryptjs": "^3.0.3",
    "diff": "^8.0.3",
    "next": "16.1.6",
    "next-auth": "^4.24.13",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "typescript": "^5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@playwright/test": "^1.58.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^27.0.1",
    "prisma": "^6.19.2",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "vitest": "^3.2.4"
  }
}
